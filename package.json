{
	"name": "logoscope",
	"displayName": "LogoScope",
	"description": "NetLogo Syntax Highlighting",
	"version": "0.1.3",
	"publisher": "danielvartan",
	"repository": {
		"type": "git",
		"url": "https://github.com/danielvartan/logoscope"
	},
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.102.0",
		"positron": "^2025.8.x"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"scripts": {
		"js-yaml-nlogo": "npx js-yaml syntaxes/nlogo.yaml > syntaxes/nlogo.json",
		"js-yaml-nlogox": "npx js-yaml syntaxes/nlogox.yaml > syntaxes/nlogox.json",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test:grammar": "vscode-tmgrammar-test tests/*.nlogo"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^20",
		"@types/vscode": "^1.100.0",
		"eslint": "^9.13.0",
		"js-yaml": "^4.1.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0",
		"vscode-tmgrammar-test": "^0.1.3"
	},
	"dependencies": {
		"@posit-dev/positron": "^0.1.3"
	},
	"contributes": {
		"languages": [
			{
				"id": "netlogo",
				"aliases": [
					"NetLogo"
				],
				"extensions": [
					".nlogo",
					".nlogo3d",
					".nls"
				],
				"configuration": "language-configuration.json"
			},
			{
				"id": "nlogox",
				"aliases": [
					"NetLogo XML"
				],
				"extensions": [
					".nlogox",
					".nlogox3d"
				],
				"configuration": "language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "netlogo",
				"scopeName": "source.nlogo",
				"path": "syntaxes/nlogo.json"
			},
			{
				"language": "nlogox",
				"scopeName": "source.nlogox",
				"path": "syntaxes/nlogox.json"
			}
		]
	}
}
